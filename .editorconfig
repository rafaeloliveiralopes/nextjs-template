# Define que esse é o arquivo raiz da configuração
root = true

# Regra geral para todos os arquivos
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

# Regras específicas para arquivos JSON
[*.json]
indent_style = space
indent_size = 2

# Regras específicas para arquivos TypeScript e JavaScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# Regras específicas para arquivos YAML (como arquivos de CI/CD)
[*.yml]
indent_style = space
indent_size = 2

# Regras para arquivos Markdown
[*.md]
trim_trailing_whitespace = false

# Regras para arquivos de configuração (como .env)
[*.{env,env.*}]
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false
